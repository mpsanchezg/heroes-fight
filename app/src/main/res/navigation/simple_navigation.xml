<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/simple_navigation"
    app:startDestination="@id/homeFragment2">

    <fragment
        android:id="@+id/homeFragment2"
        android:name="cl.sangut.heroesfightapp.views.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment2_to_fighterListFragment2"
            app:destination="@id/fighterListFragment2" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment2"
        android:name="cl.sangut.heroesfightapp.views.profile.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/battleFragment2"
        android:name="cl.sangut.heroesfightapp.views.battle.BattleFragment"
        android:label="fragment_battle"
        tools:layout="@layout/fragment_battle" />
    <fragment
        android:id="@+id/fighterListFragment2"
        android:name="cl.sangut.heroesfightapp.views.home.FighterListFragment"
        android:label="fragment_fighter_list"
        tools:layout="@layout/fragment_fighter_list" />
    <fragment
        android:id="@+id/loginFragment3"
        android:name="cl.sangut.heroesfightapp.views.signin.LoginFragment"
        android:label="login_fragment"
        tools:layout="@layout/login_fragment" />
</navigation>
