<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/fighterItem"
    android:background="@drawable/item_style">

    <ImageView
        android:id="@+id/fighterImageView"
        android:layout_width="54sp"
        android:layout_height="54sp"
        android:layout_weight="1"
        tools:srcCompat="@tools:sample/avatars"
        android:layout_margin="8sp"
        android:contentDescription="@string/hero_image" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="99"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fighterNameTextView"
            android:textColor="@color/secondary_title"
            android:text="@string/fighter_name"
            android:textSize="28sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fighterTypeTextView"
            android:textColor="@color/normal_text"
            android:text="@string/fighter_type"
            android:textSize="20sp"/>
    </LinearLayout>

</LinearLayout>
